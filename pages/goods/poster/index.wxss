/*箭头 */
.pre,.next{
  position: absolute;
  top: 50%;
}
.pre text,.next text{
  font-size:40rpx;
  color: #000;
}
.pre{
  left: 20rpx;
  position:absolute;z-index:999;
  animation: pre 1.5s infinite ease-in-out;
}
.pre text:last-child{
  margin-left: -20rpx;
  color: #a0a0a0
}
.next{
  right: 20rpx;
  position:absolute;z-index:999;
  animation: next 1.5s infinite ease-in-out;
}
.next text:first-child{
  margin-right: -20rpx;
  color: #a0a0a0
}
@keyframes next {
	0%,30% {opacity: 0;transform: translate(0px,0px);}
	60% {opacity:0.8;transform: translate(5px,0);}
	100% {opacity: 0;transform: translate(-8px,0px);}
}
@keyframes pre {
	0%,30% {opacity: 0;transform: translate(8px,0px);}
	60% {opacity: 0.8;transform: translate(0px,0);}
	100% {opacity: 0;transform: translate(8px,0px);}
}
